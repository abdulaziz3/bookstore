<p id="notice"><%= notice %></p>

<p>
  <strong>Full Name:</strong>
  <%= @user.full_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Dob:</strong>
  <%= @user.dob.strftime("%d/%m/%Y") %>
</p>
<% if signed_in? and @current_user.admin? %>
<%= link_to 'add admin', edit_user_path(@user), class: "btn btn-danger btn-lg " %>
<% end %>
<% if signed_in? and !@current_user.admin? %>
<%= link_to 'Edit', edit_user_path(@user), class: "btn btn-danger btn-lg " %>
<% end %>
<%= link_to 'Back', users_path, class: "btn btn-danger btn-lg" %>
